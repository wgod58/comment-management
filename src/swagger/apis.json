      "post": {
        "tags": [
          "User"
        ],
        "summary": "send notify",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "send notification",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "payload",
                  "target",
                  "token"
                ],
                "properties": {
                  "payload": {
                    "type": "object"
                  },
                  "token": {
                    "type": "string",
                    "example": "thetoken"
                  },
                  "target": {
                    "type": "string",
                    "example": "customer"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "subscribe success"
