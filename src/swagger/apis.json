  "paths": {
    "/update-user-info": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "update user information",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "userId",
                  "userInfo"
                ],
                "properties": {
                  "userId": {
                    "type": "integer",
                    "example": 12
                  },
                  "userInfo": {
                    "type": "object",
                    "example": {
                      "firstName": "May",
                      "lastName": "Test",
                      "gender": 1,
                      "height": 180,
                      "weight": 80,
                      "birthDate": "1980-01-01"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Response success",
            "content": {
              "applocation/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "update success"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Response error",
            "content": {
              "applocation/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_500"
                }
              }
            }
          }
        }
      }
    },
    "/send-password-changed-email": {
      "post": {
        "tags": [
