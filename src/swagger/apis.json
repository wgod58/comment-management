        ],
        "requestBody": {
          "description": "Email",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SendPasswordChangedEmail"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "password changed/reset notification sent"
          },
          "400": {
            "description": "Response error request",
            "content": {
              "applocation/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_400"
                }
              }
            }
          },
          "500": {
            "description": "Response error",
            "content": {
              "applocation/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_500"
                }
              }
            }
          }
        }
      }
    },
    "/unsubscribe/{email}": {
      "delete": {
        "tags": [
          "User"
        ],
        "summary": "unsubscribe an email",
        "parameters": [
          {
            "name": "email",
            "in": "path",
            "description": "Unsubscribe email",
            "required": true,
            "explode": true,
            "schema": {
              "type": "string",
              "example": "test@test.com"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Response status on delete success"
