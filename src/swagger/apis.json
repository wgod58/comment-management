  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "staff": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "account": {
            "type": "string"
          },
          "authId": {
            "type": "string"
          },
          "position": {
            "type": "string"
          },
          "rights": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "addressR": {
            "type": "string"
          },
          "picture": {
            "type": "string"
          },
          "comment": {
            "type": "string"
          },
          "employmentTimeStart": {
            "type": "string"
          },
          "employmentTimeEnd": {
            "type": "string",
            "example": "SUCCESS"
          },
          "archived": {
            "type": "boolean"
          }
        }
      },
      "SendPasswordChangedEmail": {
        "required": [
          "email"
        ],
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "test@example.com"
          },
          "action": {
            "type": "string",
            "default": "changed",
            "example": "reset"
          }
        }
      },
      "inline_response_400": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "miss params"
          }
        }
      },
      "inline_response_500": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Something went wrong"
          }
        }
      },
      "inline_response_404": {
        "properties": {
          "code": {
            "type": "string",
            "example": "FAIL"
          },
          "error": {
            "type": "string",
            "example": "function xxx does not exist"
          }
        }
      }
